<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <RelativeLayout
        android:id="@+id/widget_create_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="top">

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_revert"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/arrow_back"
            android:gravity="center"
            android:padding="14dp"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="18sp" />



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">


        <EditText
            android:id="@+id/search_box_input"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/round_edittext"
            android:ems="10"
            android:hint="Search Here..."
            android:textColorHint="@color/cardview_shadow_start_color"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/search_friend_buttom"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/search_friend_icon"
                />
            <ImageButton
                android:id="@+id/search_community_buttom"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_toEndOf="@+id/search_friend_buttom"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/search_community"
                />




        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/search_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="0dp"></ListView>

</LinearLayout>