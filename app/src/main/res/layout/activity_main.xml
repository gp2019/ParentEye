<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floatingButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/feather"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            android:text="logout"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/makepage"
            android:text="create page"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ShowComments"
            android:text="Show comments"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ShowMyFriend"
            android:text="Show Friend"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goprofile"
            android:text="Go profile"/>
      <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/makeGroup"
            android:text="Create Group"/>
        <Button
            android:id="@+id/addchild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add new child" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mychildren"
            android:text="View MyChildren"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewFriends"
            android:text="View My Friend"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:text="Search"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Activity_log"
            android:text="Children Activity Log"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton

                android:id="@+id/like_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/notification_round_button"
                android:background="@drawable/like_round_button"
                android:textColor="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                />

            <ImageButton

                android:id="@+id/dislike_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dis_like"
                android:textColor="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"

                />
            <ImageButton
                android:id="@+id/notification_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/notification_round_button"
                android:src="@drawable/notification_icon"
                android:textColor="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                />
            <ImageButton

                android:id="@+id/addfriend_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/addfriend_round_btn"
                android:textColor="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                />

            <ImageButton

                android:id="@+id/removeFriend_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/remove_friend_round_btn"
                android:textColor="#fff"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                />

        </LinearLayout>





        <ImageView
            android:id="@+id/firendrequestid"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/friendrequest"/>
        <ListView
            android:id="@+id/Post_listview"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="match_parent">

        </ListView>



    </LinearLayout>

</RelativeLayout>