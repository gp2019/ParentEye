<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".AccountActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/Accountcoverpage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/welcome"
        android:scaleType="centerCrop" />


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Accountprofilepage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/index"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-100dp"
                android:layout_marginLeft="130dp"
                android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/Accountname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="-8dp"
                android:textSize="30sp"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-90dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/optionMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/option"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/friendsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234"
                android:textColor="#000"
                android:textSize="27sp"
                android:layout_marginLeft="250dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/userAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lives in user addresse"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"/>
        <TextView
            android:id="@+id/userdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of birth "
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female "
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"/>

        <ListView
            android:id="@+id/accountPost_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>


















    </LinearLayout>

</android.support.constraint.ConstraintLayout>